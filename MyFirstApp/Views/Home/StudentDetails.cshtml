<!DOCTYPE HTML>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link herf="/css/bootstrap.css" rel="stylesheet" />
    <title>Student Details</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/home/index">Home</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/home/products">Products</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/home/contact">Contacts</a>
            </li>
        </ul>
    </nav>
    @{
        string StudentResult;
        if (@ViewBag.Marks >= 35)
        {
            StudentResult = "Pass";
        }
        else
        {
            StudentResult = "Fail";
        }
    }
    <div class="container-fluid">
        <table class="table">
            <tr>
                <td>Student Id</td>
                <td>@ViewBag.StudentId</td>
            </tr>
            <tr>
                <td>Student Name</td>
                <td>@ViewBag.StudentName</td>
            </tr>
            <tr>
                <td>Marks</td>
                <td>@ViewBag.Marks</td>
            </tr>
             <tr>
                 <td>Result</td>
                 <td>@StudentResult</td>
             </tr>
             <tr>
                 <td colspan="2">
                    @if(StudentResult == "Pass")
                    {
                        <span class="text-success">Congratulation</span>
                    }
                    else
                    {
                        <span class="text-danger">Better Luck Next TIme</span>
                    }
                </td>
             </tr>
             <tr>
                 <td>Semester</td>
                 <td>

                    <ul>
                        @for (int i = 0; i <= ViewBag.Semester; i++)
                        {
                            <li>@i</li>
                        }
                    </ul>
                    
                </td>
             </tr>
             <tr>
                 <td>Subjects</td>
                 <td>
                    @foreach (var subject in ViewBag.Subjects)
                    {
                        <li>Subjects</li>
                    }
                </td>
             </tr>
        </table>
        </>
    </div>
</body>
</html>


